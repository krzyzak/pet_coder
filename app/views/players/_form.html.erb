<%= form_with model: @player, class: "space-y-6" do |f| %>
  <% if @player.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
      <h4 class="font-bold"><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h4>
      <ul class="mt-2 list-disc list-inside">
        <% @player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white/95 rounded-lg p-4 shadow-lg">
    <div class="space-y-4">
      <div>
        <%= f.label :name, class: "block text-lg font-bold text-gray-800 mb-2" %>
        <%= f.text_field :name, class: "w-full p-3 border border-gray-300 rounded-lg font-medium text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter player name" %>
      </div>

      <div>
        <%= f.label :pet_id, "Choose Pet", class: "block text-lg font-bold text-gray-800 mb-2" %>
        <div class="grid grid-cols-3 gap-2">
          <% Pet.find_each do |pet| %>
            <label class="cursor-pointer group selection-card">
              <%= f.radio_button :pet_id, pet.id, class: "sr-only peer" %>
              <div class="card-border relative border-2 rounded-lg p-4 transition-all duration-200 border-gray-300 hover:border-green-400 hover:bg-green-50 hover:shadow-md peer-checked:border-green-500 peer-checked:bg-green-50 peer-checked:shadow-lg">
                <div class="card-content flex items-center justify-center">
                  <div class="flex items-center justify-center">
                    <%= image_tag "media/pets/#{pet.image_name}", class: "size-24 object-contain" %>
                  </div>
                  <div class="absolute top-1 right-1 text-green-500 opacity-0 peer-checked:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :treat_id, "Choose Treat", class: "block text-lg font-bold text-gray-800 mb-2" %>
        <div class="grid grid-cols-3 gap-2">
          <% Treat.find_each do |treat| %>
            <label class="cursor-pointer group selection-card">
              <%= f.radio_button :treat_id, treat.id, class: "sr-only peer" %>
              <div class="card-border relative border-2 rounded-lg p-4 transition-all duration-200 border-gray-300 hover:border-cyan-400 hover:bg-cyan-50 hover:shadow-md peer-checked:border-cyan-500 peer-checked:bg-cyan-50 peer-checked:shadow-lg">
                <div class="card-content flex items-center justify-center">
                  <div class="flex items-center justify-center">
                    <%= image_tag "media/treats/#{treat.image_name}", class: "size-24 object-contain" %>
                  </div>
                  <div class="absolute top-1 right-1 text-cyan-500 opacity-0 peer-checked:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :target_id, "Choose Target", class: "block text-lg font-bold text-gray-800 mb-2" %>
        <div class="grid grid-cols-3 gap-2">
          <% Target.find_each do |target| %>
            <label class="cursor-pointer group selection-card">
              <%= f.radio_button :target_id, target.id, class: "sr-only peer" %>
              <div class="card-border relative border-2 rounded-lg p-4 transition-all duration-200 border-gray-300 hover:border-yellow-400 hover:bg-yellow-50 hover:shadow-md peer-checked:border-yellow-500 peer-checked:bg-yellow-50 peer-checked:shadow-lg">
                <div class="card-content flex items-center justify-center">
                  <div class="flex items-center justify-center">
                    <%= image_tag "media/targets/#{target.image_name}", class: "size-24 object-contain" %>
                  </div>
                  <div class="absolute top-1 right-1 text-yellow-500 opacity-0 peer-checked:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <%= f.submit class: "flex-1 bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 transition-colors font-bold text-lg" %>
    </div>
  </div>
<% end %>
