<div class="relative z-10 flex h-full">
  <div class="w-3/4 h-full flex flex-col items-center justify-center">
    <div class="mb-6 space-y-4">
      <div class="flex items-center justify-center space-x-8 text-white text-shadow-lg">
        <span class="text-2xl font-bold" id="points">Points: <%= Current.game.points %></span>

        <!-- Player Selection -->
        <div class="flex items-center space-x-3">
          <span class="text-xl font-bold">Player:</span>
          <% if Current.family.players.any? %>
            <%= form_with url: change_players_path(Current.family.hashid), method: :put, local: true, class: "flex items-center space-x-2", data: { controller: "form-autosubmit" } do |f| %>
              <%= f.select :id,
                  options_from_collection_for_select(Current.family.players, :hashid, :name, Current.player&.hashid),
                  {},
                  {
                    class: "bg-white/20 backdrop-blur-sm text-white font-bold py-1 px-3 rounded border border-white/30 focus:outline-none focus:ring-2 focus:ring-white/50 hover:bg-white/30 transition-colors",
                    data: { action: "form-autosubmit#update" }
                  } %>
            <% end %>
          <% else %>
            <span class="text-lg text-white/80">No players</span>
          <% end %>
          <%= link_to "+", new_player_path(Current.family),
              class: "bg-green-500 text-white font-bold py-1 px-3 rounded hover:bg-green-600 transition-colors text-sm shadow-lg",
              data: { turbo: false },
              title: "Create New Player" %>
        </div>

        <div class="flex items-center space-x-2">
          <span class="text-2xl font-bold">Lives:</span>
          <div class="flex space-x-1">
            <% Current.game.lives.times do %>
              <%= image_tag "media/heart.png", class: "w-8 h-8" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="relative">
      <div class="grid grid-cols-10 gap-0 border-2 border-black bg-white/10 relative">
        <% (0...10).each do |row| %>
          <% (0...10).each do |col| %>
            <div class="w-20 h-20 border border-black/30"></div>
          <% end %>
        <% end %>

        <%= render collection: Current.game.treats, partial: "treats/treat", locals: { item: Current.game.treat } %>
        <%= render collection: Current.level.walls, partial: "game_objects/game_object", as: :game_object %>
        <%= render collection: Current.level.holes, partial: "game_objects/game_object", as: :game_object %>
        <%= render Current.pet, level: Current.level %>
        <%= render Current.target, level: Current.level %>
      </div>
    </div>
  </div>

  <div class="w-1/4 h-full bg-gray-200 border-l-2 border-gray-400 p-6">
    <div class="bg-white h-full rounded-lg p-6 flex flex-col">
      <div class="mb-6">
        <h3 class="text-lg font-bold mb-3">Ruby Code Editor:</h3>
        <div class="text-sm text-gray-600 space-y-1 mb-4">
          <p>Examples: left, right, up, down</p>
          <p>5.times { right }, 3.times { up }</p>
        </div>
      </div>

      <%= form_with url: execute_game_path, class: "flex flex-col h-full" do |f| %>
        <%= f.text_area :code, class: "w-full flex-1 p-3 border border-gray-300 rounded-lg font-mono text-sm resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>

        <div class="mt-6 space-y-4">
          <div class="flex gap-3">
            <%= f.submit "Run", class: "flex-1 bg-blue-500 text-white py-3 px-4 rounded-lg hover:bg-blue-600 transition-colors font-medium" %>
            <button type="button" class="flex-1 bg-red-500 text-white py-3 px-4 rounded-lg hover:bg-red-600 transition-colors font-medium">CLEAR</button>
          </div>

          <div class="grid grid-cols-3 gap-2">
            <%= link_to "Pet", change_pet_game_path, data: { turbo_method: :put }, class: "text-center bg-green-500 text-white py-2 px-3 rounded-lg hover:bg-green-600 transition-colors text-sm font-medium" %>
            <%= link_to "Target", change_target_game_path, data: { turbo_method: :put }, class: "text-center bg-yellow-500 text-white py-2 px-3 rounded-lg hover:bg-yellow-600 transition-colors text-sm font-medium" %>
            <%= link_to "Treat", change_treat_game_path, data: { turbo_method: :put }, class: "text-center bg-cyan-500 text-white py-2 px-3 rounded-lg hover:bg-cyan-600 transition-colors text-sm font-medium" %>
          </div>

          <div class="grid grid-cols-1 gap-2">
            <%= link_to "🏆 Leaderboard", leaderboard_players_path(Current.family), data: { turbo: false }, class: "text-center bg-purple-500 text-white py-2 px-3 rounded-lg hover:bg-purple-600 transition-colors text-sm font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
