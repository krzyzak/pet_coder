<%= turbo_frame_tag :game do %>
  <div class="w-3/4 h-full flex flex-col items-center justify-center">
    <div class="mb-6 space-y-4">
      <div class="flex items-center justify-center space-x-8 text-white text-shadow-lg">
        <span class="text-2xl font-bold" id="points">Points: <%= Current.game.points %></span>

        <!-- Player Selection -->
        <div class="flex items-center space-x-3">
          <span class="text-xl font-bold">Player:</span>
          <% if Current.family.players.any? %>
            <%= form_with url: change_players_path(Current.family.hashid), method: :put, local: true, class: "flex items-center space-x-2", data: { controller: "form-autosubmit" } do |f| %>
              <%= f.select :id,
                  options_from_collection_for_select(Current.family.players, :hashid, :name, Current.player&.hashid),
                  {},
                  {
                    class: "bg-white/20 backdrop-blur-sm text-white font-bold py-1 px-3 rounded border border-white/30 focus:outline-none focus:ring-2 focus:ring-white/50 hover:bg-white/30 transition-colors",
                    data: { action: "form-autosubmit#update" }
                  } %>
            <% end %>
          <% else %>
            <span class="text-lg text-white/80">No players</span>
          <% end %>
          <%= link_to "+", new_player_path(Current.family),
              class: "bg-green-500 text-white font-bold py-1 px-3 rounded hover:bg-green-600 transition-colors text-sm shadow-lg",
              data: { turbo: false },
              title: "Create New Player" %>
        </div>

        <div class="flex items-center space-x-2">
          <span class="text-2xl font-bold">Lives:</span>
          <div class="flex space-x-1">
            <% Current.game.lives.times do %>
              <%= image_tag "media/heart.png", class: "w-8 h-8" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="relative">
      <div class="grid grid-cols-10 gap-0 border-2 border-black bg-white/10 relative">
        <% (0...10).each do |row| %>
          <% (0...10).each do |col| %>
            <div class="w-20 h-20 border border-black/30"></div>
          <% end %>
        <% end %>

        <%= render collection: Current.game.treats, partial: "treats/treat", locals: { item: Current.game.treat } %>
        <%= render collection: Current.level.walls, partial: "game_objects/game_object", as: :game_object %>
        <%= render collection: Current.level.holes, partial: "game_objects/game_object", as: :game_object %>
        <%= render collection: Current.level.gates, partial: "game_objects/game_object", as: :game_object %>
        <%= render Current.pet, level: Current.level %>
        <%= render Current.target, level: Current.level %>
      </div>
    </div>
  </div>
  <%= render "games/game_over_modal" if Current.game.game_over? %>
  <%= render "games/game_completion_modal" if Current.game.completed? %>
  <%= render "games/game_rules_modal" %>
<% end %>
